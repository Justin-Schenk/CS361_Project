# main.py
# Spanish Flashcard App - Main Program

# Import necessary modules
import random

# Placeholder function to create a flashcard
def create_flashcard():
    # In a full implementation, this would create and store a flashcard
    print("Flashcard created.")

# Placeholder function to view all flashcards
def view_flashcards():
    # In a full implementation, this would retrieve and display all flashcards
    print("Displaying all flashcards.")

# Placeholder function to quiz the user
def quiz_user():
    # In a full implementation, this would quiz the user on their flashcards
    print("Starting quiz...")

# Placeholder function for app menu
def main_menu():
    print("Welcome to the Spanish Flashcard App!")
    print("1. Create Flashcard")
    print("2. View Flashcards")
    print("3. Start Quiz")
    print("4. Exit")

    choice = input("Choose an option: ")

    if choice == "1":
        create_flashcard()
    elif choice == "2":
        view_flashcards()
    elif choice == "3":
        quiz_user()
    elif choice == "4":
        print("Exiting the app.")
        return
    else:
        print("Invalid choice, please try again.")

    # Recursively call the main menu until exit
    main_menu()

# Run the main menu
if __name__ == "__main__":
    main_menu()
